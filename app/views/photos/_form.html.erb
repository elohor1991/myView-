<!------form partial for picture upload---------->
<div class=row>
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for(@photo, html: {multipart: true}) do |f|%>
      <%=f.label :Add_a_tittle %>
      <%= f.text_area :summary, rows:12%>
      
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
      </span>
      <%=f.submit(@photo.new_record? ?  'Upload a  new photo' : 'Edit Photo', class:"btn btn-default") %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
   $('#photo_picture').bind('change', function() {
     size_in_megabytes = this.files[0].size/1024/1024;
     if(size_in_megabytes > 20){
       alert('Maximum size file is 20MB please choose smaller file ');
     }
   });
</script>